
import java.util.Scanner;


public class Main {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);


            System.out.print("Enter the 1st number:");
            int a = sc.nextInt();

            System.out.print("Enter the 2nd number:");
            int b = sc.nextInt();

        System.out.println("Enter 1 for addition");
        System.out.println("Enter 2 for subtraction");
        System.out.println("Enter 3 for multiplicatio");
        System.out.println("Enter 4 for divison");


       System.out.print("Enter your choice:");
        int c = sc.nextInt();

        switch(c)
        {
            case 1:
                System.out.print("Additionn of " + a + " and " + b + " is: " + (a + b));
                System.out.println("Thank You For Using us (:");
                break;

            case 2:
                    System.out.println("subtracion of " + a + " and " + b + " is: " + (a - b));

                    break;

            case 3:
                System.out.println("multiplication of " + a + " and " + b + " is: " + (a * b));

                break;

            case 4:
                System.out.println("divison of " + a + " and " + b + " is: " + (a / b));

                break;

                default:
                     System.out.print("invalid choice!");

                             break;



        }

        System.out.println("Thank You For Using us (:");





    }
}
